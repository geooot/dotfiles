set nocompatible
filetype plugin on
filetype plugin indent on
set backspace=2
set laststatus=2
set t_Co=256

set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smartindent
set number
set hidden

set incsearch
set ignorecase
set smartcase
set showmatch

set showmode

set listchars=tab:▸\ ,eol:¬

syntax enable
set background=dark
set laststatus=2
set encoding=utf-8
set t_Co=256
set fillchars+=stl:\ ,stlnc:\

